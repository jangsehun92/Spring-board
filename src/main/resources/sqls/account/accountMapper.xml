<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="accountMapper">	

	<insert id="save" parameterType="CreateAccountDto">
		INSERT INTO 
			user_table values(#{email},#{password},#{nickname},1,#{role})
	</insert>

	<select id="selectByEmail" parameterType="java.lang.String" resultType="Account">
		SELECT 
			*
		FROM 
			user_table
		WHERE 
			email = #{email}
	</select>
	
	<select id="auth_selectByEmail" parameterType="java.lang.String" resultType="String">
		select 
        	authority
        FROM 
        	authority_table
        WHERE
        	email = #{email}
	</select>

</mapper>