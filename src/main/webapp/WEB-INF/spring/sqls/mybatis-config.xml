<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >

<configuration >
	
  <!-- 패키지.클래스 까지 입력 -->
  <typeAliases>
  	<!-- Account 관련  -->
  	<typeAlias type="jsh.project.board.account.dto.Account" alias="Account"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountResponseDto" alias="AccountResponseDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountEmailDto" alias="AccountEmailDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountCreateDto" alias="AccountCreateDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountFindRequestDto" alias="AccountFindRequestDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountFindResponseDto" alias="AccountFindResponseDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountAuthRequestDto" alias="AccountAuthRequestDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountPasswordResetRequestDto" alias="AccountPasswordResetRequestDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AccountPasswordDto" alias="AccountPasswordDto"/>
  	<typeAlias type="jsh.project.board.account.dto.AuthDto" alias="AuthDto"/>
  	
  	<!-- Article 관련 -->
  	<typeAlias type="jsh.project.board.article.domain.Article" alias="Article"/>
  	<typeAlias type="jsh.project.board.article.dto.ArticleResponseDto" alias="ArticleResponseDto"/>
  	<typeAlias type="jsh.project.board.article.dto.ResponseArticleDetailDto" alias="ResponseArticleDetailDto"/>
  	<typeAlias type="jsh.project.board.article.dto.RequestArticlesDto" alias="RequestArticlesDto"/>
  	<typeAlias type="jsh.project.board.article.dto.ArticleViewCountDto" alias="ArticleViewCountDto"/>
  	
  	<!-- Article Like 관련 -->
  	<typeAlias type="jsh.project.board.article.dto.like.RequestLikeDto" alias="RequestLikeDto"/>
  	
  	<!-- Article Reply 관련 -->
  	<typeAlias type="jsh.project.board.reply.dto.Reply" alias="Reply"/>
  	<typeAlias type="jsh.project.board.reply.dto.ResponseReplyDto" alias="ResponseReplyDto"/>
  	
  </typeAliases>
  <typeHandlers>
  	<typeHandler handler="jsh.project.board.global.handler.CustomDateHandler"/>
  </typeHandlers> 

  <!-- mapper의 위치를 잡아준다. -->
  <mappers>
    <!-- 게시판 관련 -->
  	<mapper resource="/sqls/board/boardMapper.xml"/>
  	<mapper resource="/sqls/board/articleMapper.xml"/>
  	<mapper resource="/sqls/board/articleLikeMapper.xml"/>
  	<mapper resource="/sqls/board/replyMapper.xml"/>
  	<mapper resource="/sqls/account/accountMapper.xml"/>
  	<mapper resource="/sqls/account/authMapper.xml"/>
  </mappers>
  


</configuration>

